<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.example.baapplication.userprofil.UserProfileViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".userprofil.UserProfileFragment">

        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/bib7"
            android:id="@+id/bib_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bib_logo"
            android:layout_marginLeft="22dp"
            android:text="@={vm.usernamee}"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/username" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/username"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="9dp"
            android:text="Email"
            android:textColor="@color/centerColor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/emailtxt" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/emailtxt"
            android:layout_marginHorizontal="22dp"
            android:layout_marginVertical="9dp"
            android:background="@drawable/rounded_input_borders"
            android:padding="9dp"
            android:id="@+id/email_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:text="@={vm.emaill}" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/email_layout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="15dp"
            android:text="password"
            android:textColor="@color/centerColor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/passwordtxt" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/passwordtxt"
            android:layout_marginHorizontal="22dp"
            android:layout_marginVertical="9dp"
            android:background="@drawable/rounded_input_borders"
            android:padding="9dp"
            android:id="@+id/password_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:text="@={vm.passwordd}"
                android:inputType="textPassword"
                android:id="@+id/pass_txtview"
                android:drawableEnd="@drawable/icon_remove_red_eye"
                android:onClickListener="@{()->vm.TogglePassword()}"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/password_layout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="15dp"
            android:text="Phone Number"
            android:textColor="@color/centerColor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/phoneNumbertxt" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/phoneNumbertxt"
            android:layout_marginHorizontal="22dp"
            android:layout_marginVertical="9dp"
            android:background="@drawable/rounded_input_borders"
            android:padding="9dp"
            android:id="@+id/phoneNumber_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:text="@={vm.phoneNumberr}" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>